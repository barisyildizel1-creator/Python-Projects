# Environment Variables for Flask Blog App
# Copy this file to .env and fill in your values

# REQUIRED: Generate a secure secret key for Flask sessions
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
# This MUST be set - the application will not start without it
SECRET_KEY=your-64-character-secret-key-here

# Optional: Database URL for production deployment
# DATABASE_URL=postgresql://username:password@host:port/database

# Flask Environment Settings
FLASK_ENV=development
FLASK_DEBUG=True